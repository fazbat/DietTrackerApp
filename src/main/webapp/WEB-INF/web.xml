    <!-- session timeout -->
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <!-- make sure I don't use JSP scripting -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
    </jsp-config>

</web-app>
